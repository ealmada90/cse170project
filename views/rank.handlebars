    <![endif]-->        
</head>

<body>

<div class="container-fluid">
	<div class="page-header">
  		<h1 style = "text-align: center;">POWER UPP </h1>
	</div>
	
	<a href = "/stats" type="button" class="btn btn-default">
      <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Go Back
    </a>

	<div class="row">
	  <div class="col-md-5"></div>
	  <div class="col-md-4">
	  	<h4 style: "text-align:Center">Each rank requires at least 4 out of 6 conditions</h4> 
	  </div>
	  <div class="col-md-3"></div>
	</div>


	<div class="list-group" style = "border-width: 3px">


	  {{#each ranks}}
	  <a href="#" class="list-group-item rank" id = "{{rank}}" style = "background-color: darkcyan; color: white;">{{rank}}</a>
	  <ul class="list-group" style = "display: none" id = "{{rank}}stats">
		  <li class="list-group-item">{{requirement1}}</li>
		  <li class="list-group-item">{{requirement2}}</li>
		  <li class="list-group-item">{{requirement3}}</li>
		  <li class="list-group-item">{{requirement4}}</li>
		  <li class="list-group-item">{{requirement5}}</li>
		  <li class="list-group-item">{{requirement6}}</li>
	  </ul>
	  {{/each}}

	  

	</div>

	<br><br><br><br><br><br><br><br><br><br><br><br>

	
	<div class = "row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
				<nav class = "navbar-fixed-bottom">
				<div class = "container-fluid">
					<div class="btn-group btn-group-justified btn-group-lg">
					  	<a href="/home" class="btn btn-primary">
					  	<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
						</a>
						<a href="/trainer" class="btn btn-primary">
						<span class="glyphicon glyphicon-scale" aria-hidden="true"></span>
						</a>
						<a href="/stats" class="btn btn-primary active">
						  <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
						</a>
						<!--a href="#" class="btn btn-primary">
						  	<span class="glyphicon glyphicon-certificate" aria-hidden="true"></span>
						</a-->
						<a href="/avatar" class="btn btn-primary">
						  	<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
						</a>
					</div>
				</div>
				</nav>
			</div>
	</div>
	<br>
</div>



</body>
</html>
