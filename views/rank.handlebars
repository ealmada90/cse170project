<!doctype html>

<html>
<head>
	<title>Power Upp</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet' type='text/css'>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">
	<!--link rel="stylesheet" href="/css/hci-friends.css"-->
	<link rel="stylesheet" href="/css/team2.css">
	<link rel="stylesheet" href="/css/team1.css">

	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<!--script src="/js/hci-friends.js"></script-->
	<script src="/js/powerupp.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

<div class="container-fluid">
	<div class="page-header">
  		<h1 style = "text-align: center;">POWER UPP </h1>
	</div>

	<form method="get" action="/stats" role="group">
		<input type = "hidden" name = "tm" value = "{{tm}}"> </input>
		<input type = "hidden" name = "usr" value = "{{user}}"> </input>
		<input type = "hidden" name = "eml" value = "{{email}}"> </input>
  		<button type="submit" class="btn btn-default">
	      <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Go Back
	    </button>
	</form>
	
	

	<div class="row">
	  <div class="col-md-5"> <p id = "tm" style = "display:none">{{tm}}</p> </div>
	  <div class="col-md-4">
	  	<br><br>
	  	<!--h4 style: "text-align:Center">Each rank requires at least 4 out of 6 conditions</h4--> 
	  </div>
	  <div class="col-md-3"></div>
	</div>


	<div class="list-group" style = "border-width: 3px">


	  {{#each ranks}}
	  <a href="#" class="list-group-item rank hero" id = "{{rank}}" style = "background-color: darkcyan; color: white;">{{rank}}</a>
	  <ul class="list-group" style = "display: none" id = "{{rank}}stats">
		  <li class="list-group-item">{{requirement1}}</li>
		  <li class="list-group-item">{{requirement2}}</li>
		  <li class="list-group-item">{{requirement3}}</li>
		  <li class="list-group-item">{{requirement4}}</li>
		  <li class="list-group-item">{{requirement5}}</li>
		  <li class="list-group-item">{{requirement6}}</li>
	  </ul>
	  {{/each}}

	  {{#each ranks2}}
	  <a href="#" class="list-group-item rank villain" id = "{{rank}}" style = "background-color: darkcyan; color: white;">{{rank}}</a>
	  <ul class="list-group" style = "display: none" id = "{{rank}}stats">
		  <li class="list-group-item">{{requirement1}}</li>
		  <li class="list-group-item">{{requirement2}}</li>
		  <li class="list-group-item">{{requirement3}}</li>
		  <li class="list-group-item">{{requirement4}}</li>
		  <li class="list-group-item">{{requirement5}}</li>
		  <li class="list-group-item">{{requirement6}}</li>
		  <li class="list-group-item">{{points}}</li>
	  </ul>
	  {{/each}}

	  

	</div>

	<br><br><br><br><br><br><br><br><br><br><br><br>

	
	{{> navigation}}
</div>



</body>
</html>
