<!doctype html>

<html>
<head>
	<title>Power Upp</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  	<link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet' type='text/css'>
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">
	<!--link rel="stylesheet" href="/css/hci-friends.css"-->
	<link rel="stylesheet" href="/css/team2.css">
	<link rel="stylesheet" href="/css/team1.css">

	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<!--script src="/js/hci-friends.js"></script-->
	<!--script src="/js/powerupp.js"></script-->
	<script src="/js/homeScreen.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

	<div class="container-fluid">
		<div class="page-header">
	  		<h1 style = "text-align: center; font-family: Anton">POWER UPP </h1>
		</div>
		
		<div class="row">
		  <div class="col-md-5"></div>
		  <div class="col-md-4">
		  	<p id = "tm" style = "display:none">{{tm}}</p>
		  	
		  	<h1 style= "text-align:Center; font-family: Anton">Welcome <span id = 'user'> {{user}} </span></h1> 
		  	<p style="text-align:center"><img src="{{img}}" id = "avsrc" width:"150" height="200" class="img-rounded" alt="avatar" style="background-color:white"> </p>
		  	
		  </div>
		  <div class="col-md-3"></div>
		</div>
		<div class="row">
		  <div class="col-md-3"></div>
		  <div class="col-xs-3 col-md-1">
		    <h4>Character:</h4>
		  </div>
		  <div class="col-xs-6 col-md-6">
			  <h2 style = "text-align:center" id = "avat">{{avatar}}</h2>
		  </div>
		</div>


		<div class = "workout">
			<div class="row">
				<div class="col-md-3"></div>
				
				<form class = "form-inline" id="workoutForm" role="form">
				    <div class="form-group">
				      <label for="workout" style = "font-size: 20px; text-align: center; color: lightgrey">&nbsp; <em> Please select a workout: </em></label>
				      <select class="form-control work" id="workout">
				      	<option value="#nowork">None</option>

				      	{{#each workouts}}
				        <option value ="#{{id}}" class = "work">{{title}}</option>
				        {{/each}}
				      </select>
				    </div>
				</form>
				</div>
			</div>


			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6">
					<div class="list-group" id = "nowork">
					  <button type="button" class="list-group-item">&nbsp;</button>
					  <button type="button" class="list-group-item">&nbsp;</button>
					  <button type="button" class="list-group-item">&nbsp;</button>
					  <button type="button" class="list-group-item">&nbsp;</button>
					  <button type="button" class="list-group-item">&nbsp;</button>
					</div>

					<form method = "get" action = "/stats">
						{{#each workouts}}
						<div class="list-group" id = "{{id}}" style = "display:none">
							<label class="checkbox disabled list-group-item blk" style = "text-align:center"><input type="checkbox" value="" disabled>{{exercise1}}</label>
							<label class="checkbox disabled list-group-item blk" style = "text-align:center"><input type="checkbox" value="" disabled>{{exercise2}}</label>
							<label class="checkbox disabled list-group-item blk" style = "text-align:center"><input type="checkbox" value="" disabled>{{exercise3}}</label>
							<label class="checkbox disabled list-group-item blk" style = "text-align:center"><input type="checkbox" value="" disabled>{{exercise4}}</label>
							<label class="checkbox disabled list-group-item blk" style = "text-align:center"><input type="checkbox" value="" disabled>{{exercise5}}</label>
							<p class = "stat" style = "display:none;">{{stat}}</p>
						</div>
						{{/each}}

					
					
						<input type = "hidden" name = "work" value = "1">
						<button id = "powerBtn" type="button" class="btn btn-success btn-lg" style="display: block; width: 100%;">
				  			POWER UPP
				  		</button>
				  		<form>
				  		<button id = "finishBtn" type="submit" class="btn btn-success btn-lg" style="display: none; width: 100%;">
				  			FINISH
				  		</button>
				  		<br><br>
				  		<button id = "cancelBtn" type="button" class="btn btn-danger btn-sm" style="display: none; width: 100%;">
				  			cancel
				  		</button>
			  		</form>

			  	</form>
				</div>
			</div>



		
		<br><br><br>

		
		<div class = "row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<nav class = "navbar-fixed-bottom">
				<div class = "container-fluid">
					<div class="btn-group btn-group-justified btn-group-lg">
					  	<a href="#" class="btn btn-primary active">
					  	<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
						</a>
						<a href="/trainer" class="btn btn-primary">
						<span class="glyphicon glyphicon-scale" aria-hidden="true"></span>
						</a>
						<a href="/stats" class="btn btn-primary">
						  <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
						</a>
						<!--a href="#" class="btn btn-primary">
						  	<span class="glyphicon glyphicon-certificate" aria-hidden="true"></span>
						</a-->
						<a href="/avatar" class="btn btn-primary">
						  	<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
						</a>
					</div>
				</div>
				</nav>
			</div>
		</div>
		<br>
	</div>


</body>
</html>
