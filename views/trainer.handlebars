<!doctype html>

<html>
<head>
	<title>Power Upp</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet' type='text/css'>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">
	<link rel="stylesheet" href="/css/team2.css">
	<link rel="stylesheet" href="/css/team1.css">

	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/powerupp.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

<div class="container-fluid">
	<div class="page-header">
  		<h1 style = "text-align: center;">POWER UPP </h1>
	</div>

		
	<h2 align = "center">Teammates</h2>
	<br>
	<p id = "tm" style = "display:none">{{tm}}</p>
	<div class="list-group">

	{{#each appointments}}
		{{#if mine}}
		<a href="#" class="list-group-item rank" id = "{{id}}" style = "background-color: darkcyan; color: white;">My Workout</a>
		{{else}}
	  <a href="#" class="list-group-item rank" id = "{{id}}" style = "background-color: darkcyan; color: white;">Workout with {{trainer}}</a>
	  {{/if}}
	  <form id="remove" method="get" action="/trainer">
		  <ul class="list-group" style = "display: none" id = "{{id}}stats">
		  	<input type = "hidden" name = "email" value = "{{email}}"></input>
		  	<input type = "hidden" name = "day" value = "{{day}}"></input>
		  	<input type = "hidden" name = "location" value = "{{location}}"></input>

		  	  <li class="list-group-item">Email: {{email}}</li>
			  <li class="list-group-item">Focus: {{focus}}</li>
			  <li class="list-group-item">Day: {{day}}</li>
			  <li class="list-group-item">Time: {{time}}</li>
			  <li class="list-group-item">Location: {{location}}</li>
			  {{#if mine}}
			  <li class="list-group-item">Partner: {{trainee}}</li>
			  {{/if}}
			  <input type="hidden" name = "remove" value = "yes"></input>
			  <button type = "submit" class="list-group-item btn btn-primary cancel"> Cancel Workout </button>
		  </ul>
	  </form>
	  {{else}}
	  	<h3 align="center"> <p class="groove">No Workouts Scheduled</p></h3>
	  {{/each}}


	 </div>

	  <br><br><br><br>

	<div class="row">
		<div class="col-md-3"></div>
			<div class="col-md-6">
				
			  	<form method="get" action="/request">
					<input type = "hidden" name = "tm" value = "{{tm}}"> </input>
					<input type = "hidden" name = "usr" value = "{{user}}"> </input>
					<input type = "hidden" name = "eml" value = "{{email}}"> </input>
			  		<button type="submit" class="btn btn-success btn-lg" style="width: 100%;">
						Schedule Your Workout
			  		</button>
			  		
				</form>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="col-md-3"></div>
			<div class="col-md-6">
			  	<form method="get" action="/search">
					<input type = "hidden" name = "tm" value = "{{tm}}"> </input>
					<input type = "hidden" name = "usr" value = "{{user}}"> </input>
					<input type = "hidden" name = "eml" value = "{{email}}"> </input>
			  		<button type="submit" class="btn btn-success btn-lg" style="width: 100%;">
						Find Teammates
			  		</button>
			  		
				</form>
		</div>
	</div>

	<br><br><br>
	{{> navigation}}
</div>


</body>

</html>
