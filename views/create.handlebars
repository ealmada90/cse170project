<body>

<div class="container-fluid">
	<div class="page-header">
  		<h1 style = "text-align: center; font-family: Anton">POWER UPP </h1>
	</div>
	
	<div class="row">
	  <div class="col-md-5"></div>
	  <div class="col-md-4">
	  	<h3 style="color:lightgrey; text-align:Left"><em>NEW USER</em></h3> 
	  </div>
	  <div class="col-md-3"></div>
	</div>



	<form role = "form" class="form-horizontal" method = "post" action = "/user">
	  <div class="form-group">
	    <label for="inputName" class="col-sm-2 control-label" style="color:white">Full Name</label>
	    <div class="col-sm-10">
	      <input type="name" class="form-control" id="inputName" placeholder="Name" name = "name">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputAge" class="col-sm-2 control-label" style="color:white">Age</label>
	    <div class="col-sm-10">
	      <input type="age" class="form-control" id="inputAge" placeholder="Age" name = "age">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputEmail" class="col-sm-2 control-label" style="color:white"> UCSD Email</label>
	    <div class="col-sm-10">
	      <input type="email" class="form-control" id="inputEmail" placeholder="Email" name = "email">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputPassword" class="col-sm-2 control-label" style="color:white">Password</label>
	    <div class="col-sm-10">
	      <input type="password" class="form-control" id="inputPassword" placeholder="Password" name = "password">

	    </div>
	  </div>
		<div class="form-group" >
			<label for="team" style="color:white"> Choose a Team</label>
				<select class="form-control" id = "inputTeam" name = "team">
				    <option value = "Heroes"> Heroes </option>
				    <option value = "Villains"> Villains </option>
				</select>
		</div>


	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	      <button type="submit" class="btn btn-default" id ="create">Sign Upp! </button>
	    </div>
	  </div>
	</form>
	

	
</div>


