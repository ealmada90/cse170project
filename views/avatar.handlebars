<!doctype html>

<html>
<head>
	<title>Power Upp</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet' type='text/css'>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">
	<link rel="stylesheet" href="/css/team2.css">
	<link rel="stylesheet" href="/css/team1.css">

	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/avatarScreen.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container-fluid">

	{{> header}}
	
	<a href = "/" type="button" class="btn btn-default">
      <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Log Out
    </a>

    <br><br>
    <form method="get" action="/leader" role="group">
		<input type = "hidden" name = "tm" value = "{{tm}}"> </input>
		<input type = "hidden" name = "usr" value = "{{user}}"> </input>
		<input type = "hidden" name = "eml" value = "{{email}}"> </input>
	    <button type="submit" class="btn btn-default">
	      <span class="glyphicon glyphicon-king" aria-hidden="true"></span> Leaderboard
	    </button>
	</form>

    <p id = "name" style = "display:none">{{user}}</p>
    <p id = "avat" style = "display:none">{{avatar}}</p>
    <p id = "img" style = "display:none">{{img}}</p>
    <p id = "pts" style = "display:none">{{pts}}</p>
    <p id = "tm" style = "display:none">{{tm}}</p>
    {{#each avatars}}
    	<p id = "{{name}}unlock" style = "display:none">{{name}}</p>
    {{/each}}

    <div class="row">
		  <div class="col-md-5"></div>
		  <div class="col-md-4">
		  	
		  	

		  </div>
		  <div class="col-md-3"></div>
		</div>


	<div class="row avatars">
	  <div class="col-md-5"></div>
	  <div class="col-md-4">
	  	
	  	<h2 style = "text-align:center" id = "avat"> Team <span id = "teamname"> </span> </h2>

	  	<div id = "bigchar">

	  	</div>
	  	<h3 style="text-align:center" id = "points"> </h3>

	  </div>
	  <div class="col-md-3"></div>
	</div>
	<div class="row">

		  <p style= "font-family: Arial; font-size: 20px"> <em> Select a character: </em> </p>
		</div>
		
	<div class="btn-toolbar" role="toolbar" aria-label="...">
		<div id = "smallchar">

		</div>

	</div>
	<br><br> 

	<div class="row">
		<div class="col-md-2"></div>
		
		
		<div class="col-md-4 text-center">
	  	<form method="get" action="/rank">
				
			<input type = "hidden" name = "tm" value = "{{tm}}"> </input>
			<input type = "hidden" name = "usr" value = "{{user}}"> </input>
			<input type = "hidden" name = "eml" value = "{{email}}"> </input>
		    <button id = "rankBtn" type="submit" class="btn btn-success btn-lg" style = "width: 100%">
				Rank Requirements
	  		</button>
	  		
		</form>
		</div>
	</div>

<br><br><br><br> 
	
	{{> navigation}}
</div>


</body>

</html>
