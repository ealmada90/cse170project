<!doctype html>

<html>
<head>
	<title>Power Upp</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet' type='text/css'>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">
	<link rel="stylesheet" href="/css/team2.css">
	<link rel="stylesheet" href="/css/team1.css">

	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/powerupp.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

<div class="container-fluid">
	<div class="page-header">
  		<h1 style = "text-align: center;">POWER UPP </h1>
	</div>
	
	<div class="row">
	  <div class="col-md-5"></div>
	  <div class="col-md-4">
	  	<h1 class = "title" style: "text-align:Center">Player Stats</h1> 
	  </div>
	  <div class="col-md-3"></div>
	</div>
	<div class="row user">
		  <div class="col-md-3"></div>
		  <div class="col-xs-3 col-md-1">
		    <h4>Character:</h4>
		  </div>
		  <div class="col-xs-6 col-md-6">
			  <h2 style = "text-align:center" id = "avat"></h2>
		  </div>
		</div>



	<div class = "row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<nav class="navbar navbar-default">
		    <!-- Brand and toggle get grouped for better mobile display -->
			   <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="navbar-brand">Power Upp Stats</p>
    </div>

			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
			        <li class = "active strong"><a href="#" id = "Strength">Strength<span class="sr-only">(current)</span></a></li>
			        <li class = "endure"><a href="#" id = "Endurance">Endurance</a></li>
			      </ul>
			    </div><!-- /.navbar-collapse -->
			</nav>
		</div>
	</div>

	{{#each stats}}
	<div class="row {{class}}">
	  <div class="col-md-3"></div>
	  <div class="col-md-6">
		  <h3> {{title}} - level {{level}}</h3>
	  </div>
	</div>
	<div class="row {{class}}">
	  <div class="col-md-3"></div>
	  <div class="col-xs-10 col-md-6">
		  <div class="progress">
			  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{percent}}%;">
			    <span class="sr-only">{{percent}}% Complete</span>
			  </div>
		  </div>
	  </div>
	  <p>{{percent}}%</p>
	</div>
	{{/each}}
	


	


	<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6">
					<a href = "/rank" id = "rankBtn" type="button" class="btn btn-success btn-lg" style="display: block; width: 100%;">
						Rank Requirements
			  	</a>
				</div>
			</div>

	<br><br><br><br><br><br><br><br><br><br><br><br>

	
	<div class = "row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
				<nav class = "navbar-fixed-bottom">
				<div class = "container-fluid">
					<div class="btn-group btn-group-justified btn-group-lg">
					  	<a href="/home" class="btn btn-primary">
					  	<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
						</a>
						<a href="/trainer" class="btn btn-primary">
						<span class="glyphicon glyphicon-scale" aria-hidden="true"></span>
						</a>
						<a href="#" class="btn btn-primary active">
						  <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
						</a>
						<!--a href="#" class="btn btn-primary">
						  	<span class="glyphicon glyphicon-certificate" aria-hidden="true"></span>
						</a-->
					<a href="/avatar" class="btn btn-primary">
						  <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
					</a>
				</div>
			</div>
			</nav>
		</div>
	</div>
	<br>
</div>
</body>

</html>
