<!doctype html>

<html>
<head>
	<title>Power Upp</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet' type='text/css'>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">
	<!--link rel="stylesheet" href="/css/hci-friends.css"-->
	<link rel="stylesheet" href="/css/team2.css">
	<link rel="stylesheet" href="/css/team1.css">

	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<!--script src="/js/hci-friends.js"></script-->
	<script src="/js/powerupp.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

<div class="container-fluid">
	{{> header}}
	
	<form method="get" action="/search" role="group">
		<input type = "hidden" name = "tm" value = "{{tm}}"> </input>
		<input type = "hidden" name = "usr" value = "{{user}}"> </input>
		<input type = "hidden" name = "eml" value = "{{email}}"> </input>
	    <button type="submit" class="btn btn-default">
	      <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Go Back
	    </button>
	</form>

    <div class="row">
	  <div class="col-md-5"> <p id = "tm" style = "display:none">{{tm}}</p> </div>
	  <div class="col-md-4">
	  	<h1 class = "title" style= "text-align:Center">Teammates Available</h1> 
	  </div>
	  <div class="col-md-3"></div>
	</div>


	<div class="list-group">
		{{#each teammates}}
		<form id="addTrainer" method="get" action="/trainer">
		<ul class="list-group">
		  <li class="list-group-item"><input type = "hidden" name = "name" value = "{{name}}"> Name: {{name}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "email" value = "{{email}}"> Email: {{email}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "focus" value = "{{focus}}">Focus: {{focus}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "location" value = "{{location}}">Location: {{location}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "day" value = "{{day}}">Day: {{day}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "time" value = "{{time}}">Time: {{time}} </input></li>
		  <input type = "hidden" name = "id" value = "{{id}}"> </input>

		  <input type = "hidden" name = "tm" value = "{{tm}}"> </input>
		  <input type = "hidden" name = "usr" value = "{{user}}"> </input>
		  <input type = "hidden" name = "eml" value = "{{email}}"> </input>
		  <button type="submit" class="list-group-item btn btn-default" style = "text-color:white">Schedule Workout</button>
		</ul>
		</form>
		{{else}}
	  	<h3 align="center"> <p class="groove">No Teammates Found</p></h3>
		{{/each}}

		
	  
	</div>
	<br><br><br><br><br><br><br><br><br><br><br><br>

	
	{{> navigation}}
</div>



</body>
</html>
