<body>

<div class="container-fluid">
	<div class="page-header">
  		<h1 style = "text-align: center;">POWER UPP </h1>
	</div>
	
	<a href = "/search" type="button" class="btn btn-default">
      <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Go Back
    </a>

    <div class="row">
	  <div class="col-md-5"></div>
	  <div class="col-md-4">
	  	<h1 class = "title" style: "text-align:Center">Trainer List</h1> 
	  </div>
	  <div class="col-md-3"></div>
	</div>


	<div class="list-group">
		{{#each trainers}}
		<form id="addTrainer" method="get" action="/trainer">
		<ul class="list-group">
		  <li class="list-group-item"><input type = "hidden" name = "name" value = "{{name}}"> Name: {{name}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "focus" value = "{{focus}}">Focus: {{focus}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "location" value = "{{location}}">Location: {{location}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "day" value = "{{day}}">Day: {{day}} </input></li>
		  <li class="list-group-item"><input type = "hidden" name = "time" value = "{{time}}">Time: {{time}} </input></li>
		  <input type = "hidden" name = "id" value = "{{id}}"> </input>
		  <button type="submit" class="list-group-item btn btn-default" style = "text-color:white">Schedule Appointment</button>
		</ul>
		</form>
		{{/each}}
	  
	</div>
	<br><br><br><br><br><br><br><br><br><br><br><br>

	
	<div class = "row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
				<nav class = "navbar-fixed-bottom">
				<div class = "container-fluid">
					<div class="btn-group btn-group-justified btn-group-lg">
					  	<a href="/home" class="btn btn-primary">
					  	<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
						</a>
						<a href="/trainer" class="btn btn-primary">
						<span class="glyphicon glyphicon-scale" aria-hidden="true"></span>
						</a>
						<a href="/stats" class="btn btn-primary active">
						  <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
						</a>
						<!--a href="#" class="btn btn-primary">
						  	<span class="glyphicon glyphicon-certificate" aria-hidden="true"></span>
						</a-->
						<a href="/avatar" class="btn btn-primary">
						  	<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
						</a>
					</div>
				</div>
				</nav>
			</div>
	</div>
	<br>
</div>



</body>
</html>
